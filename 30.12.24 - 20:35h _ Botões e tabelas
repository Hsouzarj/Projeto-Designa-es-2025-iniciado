<script>
	// Função para compartilhar via WhatsApp
	function shareViaWhatsApp() {
        	var url = window.location.href; // Pega a URL atual da página
        	var shareUrl = "https://api.whatsapp.com/send?text=" + encodeURIComponent("Veja as designações dos meses" + url);

        window.open(shareUrl, '_blank');
	}

        // Função para salvar os dados
        function saveData() {
                const months = [...document.querySelectorAll('#monthList li')].map(li => li.textContent.replace('Excluir', '').trim());
                const events = [...document.querySelectorAll('#eventList li')].map(li => li.textContent.replace('Excluir', '').trim());
                const members = [...document.querySelectorAll('#memberList li')].map(li => li.textContent.replace('Excluir', '').trim());

                const data = { months, events, members };

                const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = 'dados.json';
                link.click();
            }
            // Função para abrir arquivo e restaurar dados de um arquivo JSON
            document.getElementById('openFileBtn').addEventListener('click', function () {
                document.getElementById('fileInput').click();
            });

            document.getElementById('fileInput').addEventListener('change', function (event) {
                const file = event.target.files[0];

                if (file && file.type === 'application/json') {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        try {
                            const data = JSON.parse(e.target.result);

                            // Restaurar meses
                            const monthList = document.getElementById('monthList');
                            monthList.innerHTML = '';
                            (data.months || []).forEach(month => {
                                const monthItem = document.createElement('li');
                                monthItem.innerHTML = `${month} <button class="remove-btn" onclick="removeMonth(this)">Excluir</button>`;
                                monthList.appendChild(monthItem);
                            });

                            // Restaurar eventos
                            const eventList = document.getElementById('eventList');
                            eventList.innerHTML = '';
                            (data.events || []).forEach(event => {
                                const eventItem = document.createElement('li');
                                eventItem.innerHTML = `${event} <button class="remove-btn" onclick="removeEvent(this)">Excluir</button>`;
                                eventList.appendChild(eventItem);
                            });

                            // Restaurar membros
                            const memberList = document.getElementById('memberList');
                            memberList.innerHTML = '';
                            (data.members || []).forEach(member => {
                                const memberItem = document.createElement('li');
                                memberItem.innerHTML = `${member} <button class="remove-btn" onclick="removeMember(this)">Excluir</button>`;
                                memberList.appendChild(memberItem);
                            });

                            alert('Dados restaurados com sucesso!');
                        } catch (error) {
                            alert('Erro ao processar o arquivo. Certifique-se de que ele está no formato JSON correto.');
                        }
                    };

                    reader.readAsText(file);
                } else {
                    alert('Por favor, selecione um arquivo JSON válido.');
                }
            });

            let monthListArray = [];
            let memberListArray = [];

            // Função para adicionar meses sem duplicatas
            function addMonths() {
                const selectedMonths = [...document.querySelectorAll('#monthSelect option:checked')].map(option => option.value);
                const monthList = document.getElementById('monthList');

                selectedMonths.forEach(month => {
                    if (!monthListArray.includes(month)) {
                        monthListArray.push(month); // Adiciona mês na lista
                        const li = document.createElement('li');
                        li.innerHTML = `${month} <button class="remove-btn" onclick="removeMonth(this)">Excluir</button>`;
                        monthList.appendChild(li);
                    } else {
                        alert(`O mês "${month}" já foi adicionado.`);
                    }
                });
            }

            function addEvent() {
                const eventType = document.getElementById('eventType').value;
                const eventDate = document.getElementById('eventDate').value;
                const eventList = document.getElementById('eventList');

                if (!eventType || !eventDate) {
                    alert('Por favor, preencha todos os campos do evento.');
                    return;
                }

                const eventItem = document.createElement('li');
                eventItem.innerHTML = `${eventType} - ${eventDate} <button class="remove-btn" onclick="removeEvent(this)">Excluir</button>`;
                eventList.appendChild(eventItem);

                document.getElementById('eventType').value = '';
                document.getElementById('eventDate').value = '';
            }

            function removeEvent(button) {
                const eventItem = button.parentElement;
                eventItem.remove();
            }

            // Função para adicionar membros sem duplicatas
            function addMember() {
                const memberName = document.getElementById('memberName').value.trim();
                const roles = [...document.querySelectorAll('#memberRoles option:checked')].map(option => option.value);
                const memberList = document.getElementById('memberList');

                if (memberName && roles.length) {
                    if (!memberListArray.includes(memberName)) {
                        memberListArray.push(memberName); // Adiciona membro na lista
                        const li = document.createElement('li');
                        li.innerHTML = `${memberName} - ${roles.join(', ')} <button class="remove-btn" onclick="removeMember(this)">Excluir</button>`;
                        memberList.appendChild(li);
                    } else {
                        alert(`O membro "${memberName}" já foi adicionado.`);
                    }
                } else {
                    alert('Por favor, preencha todos os campos para adicionar um membro.');
                }
            }

            // Funções para remover itens das listas
            function removeMonth(button) {
                const monthList = document.getElementById('monthList');
                const month = button.parentElement.textContent.replace('Excluir', '').trim();
                monthListArray = monthListArray.filter(item => item !== month); // Remove o mês da lista
                button.parentElement.remove();
            }

            function removeMember(button) {
                const memberList = document.getElementById('memberList');
                const memberName = button.parentElement.textContent.split(' - ')[0].trim();
                memberListArray = memberListArray.filter(item => item !== memberName); // Remove o membro da lista
                button.parentElement.remove();
            }
        </script>
    </main>
</body>
</html>
